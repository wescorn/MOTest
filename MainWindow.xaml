<Window x:Class="MOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MOverlay"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        >
    <Canvas x:Name="MainCanvas">
        <Rectangle Stroke="Blue" StrokeThickness="2" Canvas.Left="500" Canvas.Top="500" Width="1000" Height="1000" Name="TestRect">
            <Rectangle.Fill>
                <ImageBrush x:Name="TestImgBrush" Viewport="100, 100, 100, 100"/>
            </Rectangle.Fill>
        </Rectangle>
        
    </Canvas>
</Window>
